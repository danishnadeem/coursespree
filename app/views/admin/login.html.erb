<h1>Login</h1>
<div id="notice"><%=notice%></div>
      <%= form_tag do %>
	<div>
	  <label for="username">Username: </label>
	  <%= text_field_tag :username %>
	</div>
	
	<div>
	  <label for="password">Password:</label>
	  <%= password_field_tag :password %>
	</div>
	
	<div style="float: left;">
	  <%= submit_tag "Login", :style=>"height: 27px; width: 100px;margin-top:2px;" %> or login with
	</div> 
      <div style="float: left;">
	<%=link_to image_tag('ico-footer-facebook.png'), '/auth/facebook'%>
      </div>	
      <% end %>
