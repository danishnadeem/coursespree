<h2>Add New Tutor</h2>
<%#=form_tag do %>
<%#*How many new tutor are you trying to add%>
<%#=number_field_tag "username", 0, :size=>5 %>
<%#=submit_tag 'Add'%>
<%#end%>

<%if @from_add_user_as_tutor.blank?%>
  <br/>
  <%= form_for(@tutor) do |f| %>
    <% if @tutor.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tutor.errors.count, "error") %> prohibited this tutor from being saved:</h2>

        <ul>
          <% @tutor.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= label_tag "Users_usernames", "Users" %>
      <br/>
      <%= f.select 'user_id', options_from_collection_for_select(@users, 'id' , 'username')%>
      <div class="field">
        <% if current_user.usertype == "superadmin"%>
          University
          <br/><br/>
          <%= select_tag 'university_id', options_from_collection_for_select(University.all, 'id' , 'name'), :prompt=>"Please Select a University", :onchange => "fetchdepartments($(this).val())"%>
        <%end%>
      </div>
      <div class="field" id="departments">
        <p class="field"  id="departments_updated">
          <%= render :partial => "/users/departments", :locals => {:departments => @departments} %>
        </p>
      </div>
      <%if controller.action_name == "new"%>
        <%= f.hidden_field :approved, :value => 0 %>
      <%elsif current_user.usertype == "superadmin"%>
        <div class="field">
          <%= f.label :approved %><br />
          <%= f.text_field :approved %>
        </div>
      <%end%>
    </div>
    <div class="field">
      <%= f.label :transcript %><br />
      <%= f.file_field :transcript %>
    </div>
    <div class="field">
      <%= f.label :resume %><br />
      <%= f.file_field :resume %>
    </div>
    <div class="field">
      <%= f.label :rate %><br />
      <%= f.text_field :rate %>
    </div>
    <%if false%>
      <div class="field">
        <%= f.label :university %><br />
        <%= f.text_field :university %>
      </div>
      <div class="field">
        <%= f.label :univ_identifier %><br />
        <%= f.text_field :univ_identifier %>
      </div>
    <%end%>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<%else%>
  <%= form_for(@tutor) do |f| %>
    <% if @tutor.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tutor.errors.count, "error") %> prohibited this tutor from being saved:</h2>

        <ul>
          <% @tutor.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.hidden_field :user_id, :value => @user_id %>
      <%if controller.action_name == "new"%>
        <%= f.hidden_field :approved, :value => 0 %>
      <%elsif current_user.usertype == "superadmin" && current_user.usertype == "subadmin"%>
        <div class="field">
          <%= f.label :approved %><br />
          <%= f.text_field :approved %>
        </div>
      <%end%>
    </div>
    <div class="field">
      <%= f.label :transcript %><br />
      <%= f.file_field :transcript %>
    </div>
    <div class="field">
      <%= f.label :resume %><br />
      <%= f.file_field :resume %>
    </div>
    <div class="field">
      <%= f.label :rate %><br />
      <%= f.text_field :rate %>
    </div>
    <%if false%>
      <div class="field">
        <%= f.label :university %><br />
        <%= f.text_field :university %>
      </div>
      <div class="field">
        <%= f.label :univ_identifier %><br />
        <%= f.text_field :univ_identifier %>
      </div>
    <%end%>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>

<script>
  function fetchdepartments(obj_val){
    $.ajax({
      url: '<%= fetch_departments_users_path %>',
      data: {university_id: obj_val }
    });
  }
</script>